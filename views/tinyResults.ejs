<%- include('./partials/head.ejs') %>
<section id="results">
	<aside>
		<form id="sort-form blurred" method="post" enctype="multipart/form-data">
			<h2>Geef jou belangrijkheid mee!</h2>
			<label for="tuin">Tuin</label>
			<select id="tuin">
				<option value="1">1</option>
				<option value="2" selected>2</option>
				<option value="3">3</option>
				<option value="4">4</option>
				<option value="5">5</option>
			</select>
			<label for="slaapkamers">Slaapkamers</label>
			<select id="slaapkamers">
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
				<option value="5">5</option>
			</select>
			<label class="pad-left" for="slaapkamersAantal">Aantal:</label>
			<input type="number" name="slaapkamersAantal" id="slaapkamersAantal">
			<label for="garage">Garage</label>
			<select id="garage">
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3" selected>3</option>
				<option value="4">4</option>
				<option value="5">5</option>
			</select>
			<label for="woonoppervlakte">Woonoppervlakte</label>
			<select id="woonoppervlakte">
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4" selected>4</option>
				<option value="5">5</option>
			</select>
			<label class="pad-left" for="woonoppmin">Minimale grootte:</label>
			<input type="number" name="woonoppmin" id="woonoppmin">
			<label for="perceeloppervlakte">Perceeloppervlakte</label>
			<select id="perceeloppervlakte">
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
				<option value="5" selected>5</option>
			</select>
			<label class="pad-left" for="perceeloppmin">Minimale grootte:</label>
			<input type="number" name="perceeloppmin" id="perceeloppmin">
			<input type="submit">
		</form>
	</aside>
	<ul class="house">
		<% for(var i=0; i < data.length; i++){ %>
			<li class="<%=data[i].Adres%>" data-tuin='<% if (data[i].Tuin === null){%>false<%} else{%>true<%}%>' data-kamer='<% if (data[i].AantalKamers === null){%>0<%} else{%><%=data[i].AantalKamers%><%}%>'
			data-garage='<% if (data[i].Garage === null){%>false<%} else{%>true<%}%>'
			data-woonopp='<% if (data[i].WoonOppervlakte === null){%>0<%} else{%><%=data[i].WoonOppervlakte%><%}%>'
			data-perceelopp='<% if (data[i].PerceelOppervlakte === null){%>0<%} else{%><%=data[i].PerceelOppervlakte%><%}%>'
			>
				<img src="<%= data[i].FotoLarge%>" alt="<%= data[i].Adres+ ' ' + data[i].Woonplaats%>" title="<%= data[i].Adres+ ' ' + data[i].Woonplaats%>">
				<a href='/results/<%= data[i].InternalId %>'></a>
				<div class="omschrijving">
					<h2><%= data[i].Adres%></h2>
					<h3><%= data[i].Postcode + ' ' + data[i].Woonplaats%></h3>
					<p><%- data[i].PrijsGeformatteerd%></p>
					<div class="sub-info">
						<% if(data[i].Woonoppervlakte !== null){ %>
							<p><%-data[i].Woonoppervlakte + ' m<sup>2</sup> - '%></p>
						<%}%>
						<% if(data[i].perceeloppervlakte !== null){ %>
							<p><%-data[i].Perceeloppervlakte + ' m<sup>2</sup>'%></p>
						<%}%>
						<% if(data[i].AantalKamers !== null){ %>
							<p><%-data[i].AantalKamers + ' kamers'%></p>
						<%}%>

					</div>
					<p><%='Makelaar: ' + data[i].MakelaarNaam%></p>
				</div>
			</li>
		<% }; %>
	</ul>
</section>
<%- include('./partials/foot.ejs') %>
