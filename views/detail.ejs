<%- include('./partials/head.ejs') %>
<section id="detail">
	<h1><%= data.Adres + ', ' + data.Plaats%></h1>
	<a href="javascript:history.back();">Terug naar overzicht</a>
	<img src="<%= data.Media[0].MediaItems[3].UrlSecure%>" alt="<%= data.Adres+ ' ' + data.Plaats%>" title="<%= data.Adres+ ' ' + data.Plaats%>">
	<div class="sub-img">
		<img 
		src="<%= data.Media[1].MediaItems[2].UrlSecure%>" alt="<%= data.Adres+ ' ' + data.Plaats%>" title="<%= data.Adres+ ' ' + data.Plaats%>">
		<img src="<%= data.Media[2].MediaItems[2].UrlSecure%>" alt="<%= data.Adres+ ' ' + data.Plaats%>" title="<%= data.Adres+ ' ' + data.Plaats%>">
		<img src="<%= data.Media[3].MediaItems[2].UrlSecure%>" alt="<%= data.Adres+ ' ' + data.Plaats%>" title="<%= data.Adres+ ' ' + data.Plaats%>">
		<img src="<%= data.Media[4].MediaItems[2].UrlSecure%>" alt="<%= data.Adres+ ' ' + data.Plaats%>" title="<%= data.Adres+ ' ' + data.Plaats%>">
		<img src="<%= data.Media[5].MediaItems[2].UrlSecure%>" alt="<%= data.Adres+ ' ' + data.Plaats%>" title="<%= data.Adres+ ' ' + data.Plaats%>">
	</div>
	<% if(data.VolledigeOmschrijving !== null){ %> 
		<p><%-'<strong>Omschrijving:</strong> <br/><br/>' + data.VolledigeOmschrijving %></p>
	<% } %>
	<div class="omschrijving">
		<p><strong>Extra informatie:</strong></p>
		<p><%- data.PrijsGeformatteerd%></p>
		<% if(data.WoonOppervlakte !== null){ %>
			<p><%-'Woonoppervlakte: ' + data.WoonOppervlakte + ' m<sup>2</sup>'%></p>
		<%}%>
		<% if(data.PerceelOppervlakte !== null){ %>
			<p><%-'Woonoppervlakte: ' + data.PerceelOppervlakte + ' m<sup>2</sup>'%></p>
		<%}%>
		<% if(data.AantalKamers !== null){ %>
			<p><%-'Aantal Kamers: ' + data.AantalKamers%></p>
		<%}%>
		<p><%='Makelaar: ' + data.Makelaar%></p>
	</div>
</section>
<%- include('./partials/foot.ejs') %>